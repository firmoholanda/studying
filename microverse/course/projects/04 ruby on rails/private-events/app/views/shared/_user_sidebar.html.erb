<aside class="col-md-4">
  <section class="user_info">
    <h1><%= @user.name %></h1>
    <span class="timestamp">
      member for <%= time_ago_in_words(@user.created_at) %>
    </span>
    <% if current_user == @user %>
      <%= link_to "create new event", new_event_path, class: "btn btn-primary" %>
    <% end %>
  </section>
</aside>