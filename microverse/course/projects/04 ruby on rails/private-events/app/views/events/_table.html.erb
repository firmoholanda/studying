<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="20%" scope="col">host</th>
      <th width="5%" scope="col">date</th>
      <th width="15%" scope="col">when?</th>
      <th width="15%" scope="col">event name</th>
      <th width="70%" scope="col">description</th>
    </tr>
  </thead>
  <tbody>
  <% events.each do |event| %>
      <tr>
        <td class="host_name"><%= event.host.name %></td>
        <td class=<%= class_event %>><%= event.event_date.strftime("%d/%m/%Y") %></td>
        <td class=<%= class_event %>><%= time_ago_in_words(event.event_date) %></td>
        <td><%= link_to event.name, event %></td>
        <td><%= event.description %></td>
      </tr>
  <% end %>
  </tbody>
</table>