<% provide(:title, @user.name) %>
<% provide(:navbar_page_title, "my profile") %>

<div class="container">
  <div class="row align-items-center">
    <div class="user_info col-md-6">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </div>
    <br>
    <div class="app_info col-md-6">
      <table class="table table-striped table-hover">
        <tbody>
          <tr>
            <td><i class="fa fa-calendar-check-o fa-lg"></i></td>
            <td><%= link_to 'all my projects', projects_path, class: "all-my-projects" %></td>
          </tr>
          <tr>
            <td><i class="fa fa-calendar-plus-o fa-lg"></i></td>
            <td><%= link_to 'all my external projects', projects_no_group_path, class: "all-my-external-projects" %></td>
          </tr>
          <tr>
            <td><i class="fa fa-group fa-lg"></i></td>
            <td><%= link_to 'all my groups', groups_path, class: "all-my-groups" %></td>
          </tr>
        </tbody>
      </table>    
    </div>
  </div>
</div>